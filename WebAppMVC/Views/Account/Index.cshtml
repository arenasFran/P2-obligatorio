@{
    ViewData["Title"] = "Mi Perfil";
}

<div class="profile-container">
    <h1 class="profile-title">Mi Perfil</h1>
    
    <div class="profile-card">
        <div class="profile-info">
            <div class="info-group">
                <label>Nombre</label>
                <span class="info-value">@Context.Session.GetString("nombre")</span>
            </div>

            <div class="info-group">
                <label>Correo electr√≥nico</label>
                <span class="info-value">@Context.Session.GetString("email")</span>
            </div>

            <div class="info-group">
                <label>Rol</label>
                <span class="info-value">@Context.Session.GetString("rol")</span>
            </div>

            <div class="info-group">
                <label>Saldo actual</label>
                <span class="info-value saldo">$@ViewBag.Saldo</span>
            </div>
        </div>

        <div class="balance-section">
            <h2>Cargar Saldo</h2>
            <form id="balanceForm" action="/Account/CargarSaldo" method="post">
                <div class="form-group" style="margin-bottom: 2rem;">
                    <label for="monto">Monto a cargar</label>
                    <div class="input-group">
                        <span class="currency-symbol">$</span>
                        <input type="number" 
                               class="form-input" 
                               id="monto" 
                               name="monto" 
                               min="1" 
                               step="1" 
                               required 
                               placeholder="Ingresa el monto">
                    </div>
                </div>
                <button type="submit" class="submit-button" id="submitButton">
                    <span class="button-text">Cargar saldo</span>
                </button>
            </form>
        </div>
    </div>
</div>

<style>
    .profile-container {
        max-width: 600px;
        margin: 40px auto;
        padding: 0 20px;
    }

    .profile-title {
        font-size: 2rem;
        font-weight: 600;
        color: #1a1a1a;
        margin-bottom: 1.5rem;
        text-align: center;
    }

    .profile-card {
        background: white;
        border-radius: 12px;
        padding: 2rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        border: 1px solid #e6e6e6;
    }

    .profile-info {
        margin-bottom: 2rem;
        padding-bottom: 2rem;
        border-bottom: 1px solid #eee;
    }

    .info-group {
        margin-bottom: 1.5rem;
    }

    .info-group:last-child {
        margin-bottom: 0;
    }

    .info-group label {
        display: block;
        color: #666;
        font-size: 0.875rem;
        margin-bottom: 0.5rem;
    }

    .info-value {
        display: block;
        font-size: 1.125rem;
        color: #1a1a1a;
        font-weight: 500;
    }

    .saldo {
        color: #2563eb;
        font-weight: 600;
    }

    .balance-section {
        margin-top: 1rem;
    }

    .balance-section h2 {
        font-size: 1.25rem;
        color: #1a1a1a;
        margin-bottom: 1.5rem;
    }

    .input-group {
        position: relative;
        display: flex;
        align-items: center;
        border: 1.5px solid #e0e0e0;
        border-radius: 8px;
        transition: border-color 0.2s ease;
    }

    .input-group:focus-within {
        border-color: #2563eb;
    }

    .currency-symbol {
        padding-left: 1rem;
        color: #666;
        font-weight: 500;
        position: absolute;
        left: 0;
    }

    .form-input {
        width: 100%;
        padding: 0.75rem 1rem 0.75rem 2.5rem;
        border: none;
        border-radius: 8px;
        font-size: 1rem;
        color: #2a2a2a;
        background: transparent;
    }

    .form-input:focus {
        outline: none;
    }

    .submit-button {
        width: 100%;
        padding: 0.875rem;
        background: #2563eb;
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 500;
        cursor: pointer;
        transition: background-color 0.2s ease;
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .submit-button:hover {
        background: #1d4ed8;
    }

    .submit-button:disabled {
        background: #93c5fd;
        cursor: not-allowed;
    }
</style>

<script>
    document.getElementById('balanceForm').addEventListener('submit', function(e) {
        const button = document.getElementById('submitButton');
        const buttonText = button.querySelector('.button-text');
        
        buttonText.textContent = 'Cargando...';
    });
</script>
